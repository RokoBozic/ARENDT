@model IEnumerable<QuizApp.Core.Models.Player>

@foreach (var player in Model.OrderByDescending(p => p.Score))
{
    <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0">@player.Name</h6>
        </div>
        <span class="badge bg-primary rounded-pill">@player.Score</span>
    </div>
} 