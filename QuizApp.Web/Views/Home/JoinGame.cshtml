@{
    ViewData["Title"] = "Join Game";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card fade-in">
                <div class="card-body text-center">
                    <i class="fas fa-gamepad fa-4x mb-4" style="color: var(--primary-color);"></i>
                    <h2 class="card-title mb-4">Join a Game</h2>
                    
                    <form asp-action="JoinGame" method="post" class="slide-up">
                        <div class="validation-summary text-danger" asp-validation-summary="ModelOnly"></div>
                        
                        <div class="form-group mb-4">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--primary-color); border: none;">
                                    <i class="fas fa-hashtag"></i>
                                </span>
                                <input type="text" name="gameCode" class="form-control form-control-lg" 
                                       placeholder="Enter Game Code" required
                                       style="background-color: #363636; border: 2px solid var(--primary-color); color: var(--text-light);">
                            </div>
                        </div>
                        
                        <div class="form-group mb-4">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--primary-color); border: none;">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" name="playerName" class="form-control form-control-lg" 
                                       placeholder="Enter Your Name" required
                                       style="background-color: #363636; border: 2px solid var(--primary-color); color: var(--text-light);">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-play-circle me-2"></i>Join Game
                        </button>
                        
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light w-100">
                            <i class="fas fa-arrow-left me-2"></i>Back to Home
                        </a>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4 slide-up" style="animation-delay: 0.2s;">
                <p class="text-muted">Want to create your own quiz?</p>
                <a href="@Url.Action("Create", "Quiz")" class="btn btn-success">
                    <i class="fas fa-plus-circle me-2"></i>Create Quiz
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation to form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            this.classList.add('fade-out');
        });
    </script>
} 